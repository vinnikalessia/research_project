---
import type { GetStaticPaths } from "astro";
import Layout from '../../layouts/Layout.astro';
import { books } from '../../api/api.json';
import type { Book } from '../../interfaces/book';

export async function getStaticPaths() {

	return books.map((book: Book) => {
		return {
			params: {
				slug: book.slug
			},
			props: {
				book
			}
		}
	});
}

const { book } = Astro.props;

---
<Layout title="Detail boek">
	<div class="px-52 pt-10 pb-12 flex justify-around items-center text-neutral-white">
		<div class="flex flex-col justify-center items-center">
			<h1 transition:name={book.title} class="text-4xl font-bold">{book.title}</h1>
			<p transition:name={book.author} class="text-2xl">{book.author}</p>
		</div>
		<div class="flex justify-center">
			<img class="w-auto h-96" src={book.img} alt="boek 1" transition:name={book.slug}>
		</div>
	</div>
</Layout>