---
import Layout from '../layouts/Layout.astro'
import type { Book } from '../interfaces/book'
import { books } from '../api/api.json'

export const data = {
  books: books as Book[],
}
---

<Layout title="Home">
  <div class="px-52 pt-10 pb-12 flex justify-around items-center">
	  <p class="font-bold text-neutral-white text-xl pr-2 max-w-96">Verdiep je in de <span class="text-secondary-500">geschreven werelden</span>, waar verhalen sierlijk ontvouwen en elke pagina een <span class="text-secondary-500">portaal</span> is naar <span class="text-secondary-500">verborgen rijken</span>.</p>
	  <img class="rounded-md h-auto w-80" src="https://rtbookreviews.com/wp-content/uploads/2023/04/The-10-Best-Fantasy-Books-for-5th-Graders.jpg" alt="foto van een fantasiewereld">
  </div>
  <div class="px-32 py-6 bg-tertiary-500">
    <ul>
      {
        data.books.map((book: Book, index: number) => (
          <li {...{ key: index }}>
            <strong>{book.title}</strong> by {book.author}
            <a href={`/book/${book.slug}`}>
              <img
                src={book.img}
                alt=""
                class="w-auto h-56"
                transition:name={book.slug}
              />
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</Layout>
