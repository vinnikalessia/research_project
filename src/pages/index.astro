---
import Layout from '../layouts/Layout.astro'
import type { Book } from '../interfaces/book'
import { books } from '../api/api.json'

export const data = {
  books: books as Book[],
}
---

<Layout title="Home">
  <div class="">
    <h1 class="font-bold text-xl">We give you the best reading experience</h1>
	<div class="bg-pink-400 h-16 w-16 rounded-full"></div>
  </div>
  <div class="bg-yellow-200">
    <ul>
      {
        data.books.map((book: Book, index: number) => (
          <li {...{ key: index }}>
            <strong>{book.title}</strong> by {book.author}
            <a href={`/book/${book.slug}`}>
              <img
                src={book.img}
                alt=""
                class="w-auto h-56"
                transition:name={book.slug}
              />
            </a>
          </li>
        ))
      }
    </ul>
  </div>
